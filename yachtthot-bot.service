[Unit]
Description=YachtThot Reddit Bot
After=network.target

[Service]
Type=simple
User=thefleshgordon
WorkingDirectory=/home/thefleshgordon/YachtThot-v2
ExecStart=/home/thefleshgordon/YachtThot-v2/venv/bin/python /home/thefleshgordon/YachtThot-v2/main.py
Restart=always
RestartSec=3
MemoryMax=200M
CPUQuota=50%
Environment="PYTHONUNBUFFERED=1"
StandardOutput=append:/var/log/yachtthot-bot.log
StandardError=append:/var/log/yachtthot-bot.err

[Install]
WantedBy=multi-user.target